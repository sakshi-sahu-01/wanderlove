<% layout("layouts/boilerplate.ejs") -%>

<div class="row mt-3">
     <div class="col-8 offset-2">
    <H3>Create new listing</H3>

    <form method = "POST" action = "/listings"  novalidate class="needs-validation"enctype="multipart/form-data" >
   <div class="mb-3">
       
       <lable for="title"  class="form-label">Title</lable>
       <input name="listing[title]" placeholder = "Add a catchy title"type="text" class="form-control" required>
       <div class="invalid-feedback">Enter a title</div>
    </div>
 <div class="mb-3"> 
    <lable for="description"  class="form-label">Description</lable>
    <textarea name="listing[description]" placeholder = "description"type="text" class="form-control"  required></textarea>
    <div class="invalid-feedback">Please Enter a Description</div>
 </div>


 <div class="mb-3">
    <lable for="image"  class="form-label">Image uploaded</lable>
    <input name="listing[image]" type="file" class="form-control" required>
</div>

<div class="row">
    <div class="mb-3 col-md-4">
    <lable for="price"  class="form-label">Price</lable>
    <input name="listing[price]" placeholder = "1200"type="text" class="form-control" required>
    <div class="invalid-feedback">Please Enter a valid Price</div>
</div>

<div class="mb-3 col-md-8">
    <lable for="country"  class="form-label">Country</lable>
    <input name="listing[country]" placeholder = "India"type="text" class="form-control" required>
    <div class="invalid-feedback">country should be valid</div>
</div>

<div class="mb-3 ">
    <lable for="location"  class="form-label">Location</lable>
    <input name="listing[location]" placeholder = "jaipur,rajisthan"type="text" class="form-control" required>
    <div class="invalid-feedback">location should be valid</div>
</div>
</div>





<button class="btn btn-dark add-btn mt-3">ADD</button>
    </form>
    
    
   
</div>
</div>
